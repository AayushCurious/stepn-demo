<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:background="@drawable/start_button_disabled">

    <TextView
        android:id="@+id/aboutTextView"
        style="@style/BoldItalicTitles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:includeFontPadding="false"
        android:text="@string/about"
        android:textColor="@color/almost_black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aboutDeetsTextView"
        style="@style/RegText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:includeFontPadding="false"
        android:text="@string/app_goal"
        android:textAlignment="center"
        android:textColor="@color/almost_black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutTextView" />

    <TextView
        android:id="@+id/notesTextView"
        style="@style/BoldItalicSubtitles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:text="@string/notes"
        android:textColor="@color/almost_black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/notesDeets1TextView"
        app:layout_constraintTop_toBottomOf="@+id/aboutDeetsTextView" />

    <TextView
        android:id="@+id/notesOneLabel"
        style="@style/RegText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="1."
        android:textAlignment="viewStart"
        android:textColor="@color/almost_black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notesTextView" />

    <TextView
        android:id="@+id/notesDeets1TextView"
        style="@style/RegText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:includeFontPadding="false"
        android:text="@string/notes_details1"
        android:textAlignment="textStart"
        android:textColor="@color/almost_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notesOneLabel"
        app:layout_constraintTop_toTopOf="@+id/notesOneLabel" />

    <TextView
        android:id="@+id/notesTwoLabel"
        style="@style/RegText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="2."
        android:textAlignment="viewStart"
        android:textColor="@color/almost_black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notesDeets1TextView" />

    <TextView
        android:id="@+id/notesDeets2TextView"
        style="@style/RegText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:includeFontPadding="false"
        android:text="@string/notes_details2"
        android:textAlignment="textStart"
        android:textColor="@color/almost_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notesTwoLabel"
        app:layout_constraintTop_toTopOf="@+id/notesTwoLabel" />

    <TextView
        android:id="@+id/contactTextView"
        style="@style/RegText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:includeFontPadding="false"
        android:text="@string/contact"
        android:textAlignment="center"
        android:textColor="@color/almost_black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notesDeets2TextView" />

    <TextView
        android:id="@+id/contactEmailTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:includeFontPadding="false"
        android:text="@string/contact_email"
        android:textAlignment="center"
        android:textColor="@color/energy_blue_border"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactTextView" />

    <Button
        android:id="@+id/emailButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-16dp"
        android:alpha="0"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/contactEmailTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contactEmailTextView" />

    <TextView
        android:id="@+id/appIsFreeTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        style="@style/RegText"
        android:text="@string/dis_app_free"
        android:textAlignment="center"
        android:textColor="@color/almost_black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactEmailTextView" />

    <TextView
        android:id="@+id/supportTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:includeFontPadding="false"
        style="@style/RegText"
        android:text="@string/support_project"
        android:textAlignment="center"
        android:textColor="@color/almost_black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appIsFreeTextView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/donateConstraint"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supportTextView">

        <ImageView
            android:id="@+id/solanaLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toStartOf="@+id/binanceLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/sol_logo" />

        <ImageView
            android:id="@+id/binanceLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/solanaLogo"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/bnb_logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/clickToCopyTextView"
        style="@style/RegText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:includeFontPadding="false"
        android:text="@string/click_a_logo_to_copy_address"
        android:textColor="@color/gandalf"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donateConstraint" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:rotation="220"
        app:layout_constraintStart_toEndOf="@+id/clickToCopyTextView"
        app:layout_constraintTop_toBottomOf="@+id/donateConstraint"
        app:srcCompat="@mipmap/arrow" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:rotation="180"
        android:scaleX="-1"
        app:layout_constraintEnd_toStartOf="@+id/clickToCopyTextView"
        app:layout_constraintTop_toBottomOf="@+id/donateConstraint"
        app:srcCompat="@mipmap/arrow" />

    <Button
        android:id="@+id/solButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="30dp"
        android:alpha="0"
        android:background="@null"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/donateConstraint"
        app:layout_constraintEnd_toStartOf="@+id/bnbButton"
        app:layout_constraintStart_toStartOf="@+id/donateConstraint"
        app:layout_constraintTop_toTopOf="@+id/donateConstraint" />

    <Button
        android:id="@+id/bnbButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="16dp"
        android:alpha="0"
        android:background="@null"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/donateConstraint"
        app:layout_constraintEnd_toEndOf="@+id/donateConstraint"
        app:layout_constraintStart_toEndOf="@+id/solButton"
        app:layout_constraintTop_toTopOf="@+id/donateConstraint" />

</androidx.constraintlayout.widget.ConstraintLayout>
