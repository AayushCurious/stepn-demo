<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>

    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
    </style>

    <!-- FONTS -->
    <style name="BoldItalicTitles">
        <item name="android:fontFamily">@font/roboto_condensed_bold_italic</item>
    </style>
    <style name="RegItalic">
        <item name="android:fontFamily">@font/roboto_condensed_regular_italic</item>
    </style>
    <style name="BoldItalicSubtitles">
        <item name="android:fontFamily">@font/roboto_condensed_bold_italic</item>
    </style>
    <style name="ButtonBoldItalic">
        <item name="android:fontFamily">@font/roboto_condensed_bold_italic</item>
    </style>
    <style name="RegText">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>
    <style name="AlertText">
        <item name="android:fontFamily">@font/roboto</item>
    </style>





</resources>